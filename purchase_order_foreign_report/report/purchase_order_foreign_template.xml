<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="external_layout_purchase_foreign">
        <div class="header">
            <div class="row">
                <div class="col-xs-12" style="width:95%;">
                    <t t-call="purchase_order_foreign_report.purchase_foreign_header"/>
                </div>
            </div>
        </div>

        <div class="article o_report_layout_standard">
            <t t-raw="0" />
        </div>

        <div class="footer">
            <div class="row">
                <div class="col-xs-12" style="width:95%;">
                    <t t-call="purchase_order_foreign_report.purchase_foreign_footer"/>
                </div>
            </div>
        </div>  

    </template>

    <template id="external_layout">
        <!-- Multicompany -->
        <t t-if="not o and doc">
            <t t-set="o" t-value="doc"/>
        </t>

        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id.sudo()"/>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"/>
        </t>

        <t t-call="purchase_order_foreign_report.external_layout_purchase_foreign">
            <t t-raw="0"/>
        </t>

    </template>

    <template id="purchase_foreign_header" name="purchase_foreign_header">
        <div class="headerx" style="width:100%;font-family:helvetica">
            <div class="row" style="margin-top: 10px;">
                <div class="col-xs-6 text-left">
                    <span style="font-size:16px;" t-esc="header_name"/>
                </div>
                <div class="col-xs-6 text-right" style="font-size:14px;margin-top: 15px">
                    Phone: <span t-esc="header_phone"/> <br/>
                    Email: <span t-esc="header_mail"/>
                </div>
            </div>
        </div>
        <hr/>
    </template>

    <template id="purchase_foreign_footer" name="purchase_foreign_footer">
        <div class="text-center" style="border-top: 1px solid black;margin-bottom:5px">
            <ul class="list-inline">
                <li>Page:</li>
                <li><span class="page"/></li>
                <li>/</li>
                <li><span class="topage"/></li>
            </ul>
        </div>
    </template>

    <template id="purchase_foreign_page">
       <div class="row" style="font-size:12px">
            <div class="col-xs-6 text-left">
                <div class="row">
                    <div class="col-xs-12">
                        Order #: <span t-esc="doc.name"/>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12">
                        <t t-if="doc.invoice_to">                            
                            Invoice to: <span style="font-size:15px;font-weight:bold" t-esc="doc.invoice_to.name"/><br/>
                            <span t-if="doc.invoice_to.street" t-esc="doc.invoice_to.street"/><br/>
                            <span t-if="doc.invoice_to.zip" t-esc="doc.invoice_to.zip"/> <span t-if="doc.invoice_to.state_id" t-esc="doc.invoice_to.state_id.name"/><br/>
                            <span t-esc="doc.invoice_to.country_id.name"/><br/>
                            <t t-if="doc.invoice_to.main_id_number">
                                <span t-esc="doc.invoice_to.main_id_category_id.code"/>: <span t-esc="doc.invoice_to.main_id_number"/>
                            </t> 
                        </t>
                        <t t-else="">
                            Invoice to: <span style="font-size:15px;font-weight:bold" t-esc="doc.company_id.name"/><br/>
                            <span t-if="doc.company_id.street" t-esc="doc.company_id.street"/><br/>
                            <span t-if="doc.company_id.zip" t-esc="doc.company_id.zip"/> <span t-if="doc.company_id.state_id" t-esc="doc.company_id.state_id.name"/><br/>
                            <span t-esc="doc.company_id.country_id.name"/><br/>
                            <t t-if="doc.company_id.main_id_number">
                                <span t-esc="doc.company_id.main_id_category_id.code"/>: <span t-esc="doc.company_id.main_id_number"/>
                            </t>
                        </t>
                    </div>
                </div>
            </div>
            <div class="col-xs-6 text-right">
                <div class="row">
                    <div class="col-xs-12">
                        <span t-esc="doc.get_date_format_english()"/>                               
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12">
                        Ask to transmit to the supplier: <br/>
                        <span style="font-size:18px;font-weight:bold" t-esc="doc.partner_id.name"/><br/>
                        <span t-if="doc.partner_id.street" t-esc="doc.partner_id.street"/><br/>
                        <span t-if="doc.partner_id.zip" t-esc="doc.partner_id.zip"/> <span t-if="doc.partner_id.state_id" t-esc="doc.partner_id.state_id.name"/><br/>
                        <span t-if="doc.partner_id.country_id" t-esc="doc.partner_id.country_id.name"/><br/>
                    </div>
                </div>
            </div>
       </div>
       <div class="row" style="margin-top: 25px;font-size: 10px">
            <div class="col-xs-12">
                <table class="table table-condensed table-bordered" style="width: 100%">
                    <thead>
                        <tr>
                            <th>Quantity</th>
                            <th>Unit</th>
                            <th>Product</th>
                            <th>Packaging</th>
                            <th>HS Code</th>
                            <th>Origin</th>
                            <th>Price</th>
                            <th>Partial</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="doc.order_line" t-as="line">                        
                            <tr>
                                <td style="text-align:right"> <span t-esc="line.product_qty"/> </td>
                                <td> <span t-esc="line.product_uom.name"/></td>
                                <td> <span t-esc="line.product_id.name"/> <br/> <span t-esc="line.observations"/> </td>
                                <td> <span t-esc="line.product_attr_value_id.name"/></td> 
                                <td> <span t-esc="line.product_nmc"/></td>
                                <td> <span t-esc="line.country_id"/></td>
                                <td style="text-align:right"> <span t-esc="line.price_unit" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/></td>
                                <td style="text-align:right"> <span t-esc="line.price_subtotal" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/></td>
                            </tr>
                        </t>

                        <tr>
                            <td colspan="7" style="text-align:right">
                                TOTAL <span t-esc="doc.incoterm_id.name" style="margin-left: 20px;margin-right: 25px;"/> <span t-esc="doc.currency_id.currency_unit_label" style="margin-right: 10px;"/>
                            </td>
                            <td style="text-align:right">
                                <span t-esc="doc.amount_untaxed" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
       </div>

        <div class="row" style="margin-top:5px;font-size: 12px">
            <div class="col-xs-6 text-left">
                <table class="table" style="width: 100%">
                    <tr>
                        <td style="border: none;padding-bottom: 2px;">Place of delivery: <span t-esc="doc.place_of_delivery_id.place_of_delivery"/></td>
                    </tr>
                    <tr>
                        <td style="border: none;padding-bottom: 2px;">Packaging: <span t-esc="doc.packaging_id.packaging"/></td>
                    </tr>
                    <tr>
                        <td style="border: none;padding-bottom: 2px;">Delivery Date: <span t-esc="doc.delivery_date_week"/></td>
                    </tr>
                    <tr>
                        <td style="border: none;padding-bottom: 2px;">Shipment: <span t-esc="doc.shipment_id.shipment"/></td>
                    </tr>
                    <tr>
                        <td style="border: none;padding-bottom: 2px;">Marks: <span t-esc="doc.marks"/></td>
                    </tr>
                    <tr>
                        <td style="border: none;padding-bottom: 2px;">Packing list: <span t-esc="doc.packing_list_id.packing_list"/></td>
                    </tr>
                    <tr>
                        <td style="border: none;padding-bottom: 2px;">Import License: <span t-esc="doc.import_license_id.import_license"/></td>
                    </tr>
                    <tr>
                        <td style="border: none;padding-bottom: 2px;">Certificate of Analysis: <span t-esc="doc.certificate_of_analysis_id.certificate_of_analysis"/></td>
                    </tr>
                    <tr>
                        <t t-if="doc.p_o">
                            <td style="border: none;padding-bottom: 2px;">P/O: <span t-esc="doc.p_o"/></td>
                        </t>
                    </tr>
                    <tr>
                        <td colspan="2" style="border: none;padding-bottom: 2px;">Special Indications: <br/>
                        <pre style="border: none;background: transparent;font-size: 12px;font-family: helvetica;color:black;"><span t-esc="doc.special_indications"/></pre></td> 
                    </tr>
                </table>
            </div>
            <div class="col-xs-6 text-left">
                <table class="table" style="width: 100%">
                    <tr style="margin-top: 25px">
                        <td style="border: none;">Term of Payment: <span t-esc="doc.term_payments.name"/></td>
                    </tr>
                    <tr style="margin-top: 25px">
                        <td style="border: none;">Send Documents to: 
                            <br/>
                            <t t-if="doc.send_document_to_invoice_to">
                                <span style="font-size:15px;font-weight:bold"> Direct to customer</span> <br/>                       
                            </t>
                            <t t-else="">
                                <span style="font-size:15px;font-weight:bold" t-esc="doc.company_id.name"/><br/>
                            </t>
                            <pre style="border: none;background: transparent;font-size: 12px;font-family: helvetica;color:black;"><span t-esc="doc.send_documents_to"/> </pre>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </template>

    <template id="purchase_order_foreign_document">
        <t t-call="purchase_order_foreign_report.external_layout">
            <t t-set="doc" t-value="doc.with_context({'lang':doc.partner_id.lang})" />
            <div class="page">

                <div class="oe_structure"/>
                <div class="row">
                    <div class="col-xs-12" style="font-family:helvetica;width:95%;padding-left: 25px;padding-right: 25px;">
                        <t t-call="purchase_order_foreign_report.purchase_foreign_page"/>
                    </div>
                </div>
                <div class="oe_structure"/>
            </div>
        </t>
    </template>

    <template id="po_foreign_r">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="purchase_order_foreign_report.purchase_order_foreign_document" t-lang="doc.partner_id.lang"/>
            </t>
        </t>
    </template>

</odoo>
