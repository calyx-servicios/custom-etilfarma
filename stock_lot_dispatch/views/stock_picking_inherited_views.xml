<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_picking_lot_dispatch_form" model="ir.ui.view">
        <field name="name">stock.picking.lot.dispatch.form</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='line_lot_name']" position="after">
                <field name="lot_name_in_stock_move" string="Lot"/>
                <field name="dispatch_name_in_stock_move"  string="Dispatch"/>
                <field name="life_date_in_stock_move" string="Life Date" widget="date"/>
            </xpath>
            <xpath expr="//field[@name='line_lot_name']" position="attributes">
                <attribute name="attrs"></attribute>
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='line_dispatch_name']" position="attributes">
                <attribute name="attrs"></attribute>
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='editable_life_date']" position="attributes">
                <attribute name="attrs"></attribute>
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record> 
</odoo>