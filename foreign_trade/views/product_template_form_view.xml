<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="product_template_foreign_trade_fields">
        <field name="name">product.template.foreign.trade.fields.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='uom_po_id']" position="after">
                <field name="tariff_classification"/>
                <field name="package_pallet_qty"/>
            </xpath>
        </field>
    </record>
</odoo>
