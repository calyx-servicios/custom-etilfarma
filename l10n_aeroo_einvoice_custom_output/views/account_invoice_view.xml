<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="invoice_form_en_report_button" model="ir.ui.view">
        <field name="name">account_invoice_form_en_report_button</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_invoice_sent'][1]" position="after">
                <button 
                    name="invoice_en_print"
                    string="Print Invoice EN 1"
                    type="object"
                    attrs="{'invisible':['|',('sent','=',True), ('state', 'not in', ('open','paid'))]}"
                    class="oe_highlight"
                    groups="base.group_user"/>
            </xpath>                
        
            <xpath expr="//button[@name='action_invoice_sent'][2]" position="after">
                <button 
                    name="invoice_en_print"
                    string="Print Invoice EN 2"
                    type="object"
                    attrs="{'invisible':['|',('sent','=',False), ('state', 'not in', ('open','paid'))]}"
                    groups="base.group_user"/>
            </xpath>         

            <xpath expr="//button[@name='action_invoice_sent']" position="after">
                <button name="invoice_print" string="Print Invoice prueba 1" type="object" attrs="{'invisible':['|',('sent','=',True), ('state', 'not in', ('open','paid'))]}" class="oe_highlight" groups="base.group_user"/>
            </xpath>   
            <xpath expr="//button[@name='action_invoice_sent']" position="after">
                <button name="invoice_print" string="Print Invoice prueba 2" type="object" attrs="{'invisible':['|',('sent','=',True), ('state', 'not in', ('open','paid'))]}" class="oe_highlight" groups="base.group_user"/>
            </xpath>  
            <!-- <xpath expr="//button[@name='action_invoice_sent'][7]" position="after">
                <button 
                    name="invoice_en_print"
                    string="Prueba es"
                    type="object"
                    attrs="{'invisible':['|',('sent','=',True), ('state', 'not in', ('open','paid'))]}"
                    class="oe_highlight"
                    groups="base.group_user"/>
            </xpath>              -->
        </field>
    </record>

</odoo>
