<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="purchase_order_form_foreign_fields" model="ir.ui.view">
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">

            <field name="incoterm_id" position="replace">
                <field name="order_type_name" invisible="1"/>
            </field>
            <xpath expr="//div[2]" position="after">
                <div class="oe_title" attrs="{'invisible': [('order_type_name','!=','OCE')]}">
                    <label string="Customer Purchase Order"/>
                    <h2>
                        <field name="customer_purchase_order"/>
                    </h2>
                </div>
            </xpath>

            <xpath expr="//notebook" position="inside">
                <page string='Foreign Purchase' attrs="{'invisible': [('order_type_name','!=','OCE')]}">
                    <group>
                        <group>
                            <field name="incoterm_id" string="Incoterms"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>


    <record id="purchase_order_foreign_fields_tree" model="ir.ui.view">
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_tree"/>
        <field name="arch" type="xml">
            <field name="order_type" position="after">
                <field name="customer_purchase_order"/>
            </field>
        </field>
    </record>

    <record id="view_purchase_order_foreign_filter" model="ir.ui.view">
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.view_purchase_order_filter"/>
        <field name="arch" type="xml">
            <field name="order_type" position="after">
                <field name="customer_purchase_order"/>
            </field>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_incoterm_view">
        <field name="name">Incoterms</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">stock.incoterms</field>
        <field name="view_mode">form,tree</field>
        <field name="view_id" ref="stock.view_incoterms_tree"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Click to set a new incoterm.</p>
        </field>
    </record>


    <menuitem id="menu_incoterms_view" parent="purchase.menu_purchase_config" sequence="40" action="action_incoterm_view"/>
</odoo>
