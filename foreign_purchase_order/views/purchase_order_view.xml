<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="purchase_order_form_foreign_fields" model="ir.ui.view">
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <button name="action_view_invoice" position="attributes">
                <!-- Hide "Invoices" button if PO is sample -->
                <attribute name="attrs">{'invisible':['|', ('purchase_sample', "=", True), '&amp;', ('state', 'in', ('draft','sent','to approve')), ('invoice_ids','=',[])]}</attribute>
            </button>

            <field name="date_order" position="after">
                <field name="purchase_sample"/>
            </field>

            <field name="incoterm_id" position="replace">
                <!-- <field name="order_type_name" invisible="1"/> -->
                <field name="order_type_foreign" invisible="1"/>
            </field>

            <field name="order_type" position="attributes">
                <attribute name="attrs">{'readonly': [('purchase_sample' ,'=', True)]}</attribute>
            </field>

            <xpath expr="//div[2]" position="after">
                <div class="oe_title" attrs="{'invisible': [('order_type_foreign','=', False)]}">
                    <label string="Customer Purchase Order"/>
                    <h2>
                        <field name="customer_purchase_order"/>
                    </h2>
                </div>
            </xpath>

            <xpath expr="//notebook" position="inside">
                <page string='Foreign Purchase' attrs="{'invisible': [('order_type_foreign','=',False)]}">
                    <group>
                        <group>
                            <field name="incoterm_id" string="Incoterm"/>
                            <field name="packaging_id" string="Packaging"/>
                            <field name="special_indications" string="Special Indications" style=' min-height: 100px; word-break: break-word' />
                            <field name="extra_notes" style=' max-width: 285px;  width: 285px;word-break: break-word' string="Extra"/>
                            <field name="shipment_id" string="Shipment"/>
                        </group>
                        <group>
                            <field name="place_of_delivery_id" string="Place of Delivery"/>
                            <field name="send_documents_to" string="Send documents to" style='min-height: 130px; word-break: break-word'/>
                            <field name="delivery_date_week" string="Delivery Date (Week)"/>
                            <field name="packing_list_id" string="Packing List"/>
                            <field name="term_payments" string="Terms of Payment" options="{'no_open':True,'no_create':1,'no_create_edit':1}"/>
                        </group>
                    </group>
                </page>
                <page string='Import Documentation' attrs="{'invisible': [('order_type_foreign','=',False)]}">
                    <group>
                        <group name="import_license" string="Import License">
                            <field name="import_license_number" string="Number"/>
                            <field name="import_license_issue_date" string="Issue Date"/>
                            <field name="import_license_approval_date" string="Approval Date"/>
                        </group>
                        <group name="bill_landing" string="Bill Landing">
                            <field name="bill_landing_number" string="Number"/>
                            <field name="bill_landing_issue_date" string="Issue Date"/>
                            <field name="bill_landing_reception_date" string="Reception Date"/>
                        </group>
                        <group name="delivery" string="Delivery">
                            <field name="delivery_number" string="Number"/>
                            <field name="delivery_date" string="Date"/>
                        </group>                        
                    </group>
                </page>
            </xpath>

            <xpath expr="//sheet/div[@class='oe_title']" position="inside">
                <p class="text-warning" attrs="{'invisible': ['|','|',['order_type_foreign','=',False], ['state','not in',('purchase', 'no_invoice')],'&amp;','&amp;',['import_license_number','!=',False],['import_license_issue_date','!=',False],['import_license_approval_date','!=',False]]}">
                    <i class="fa fa-exclamation-triangle "></i> Action required: <strong>import license data not fully loaded.</strong>
                </p>
            </xpath>
        </field>
    </record>

    <record id="purchase_order_foreign_fields_tree" model="ir.ui.view">
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_tree"/>
        <field name="arch" type="xml">
            <field name="order_type" position="after">
                <field name="customer_purchase_order"/>
                <field name="import_license_number"/>
            </field>
        </field>
    </record>

    <record id="view_purchase_order_foreign_filter" model="ir.ui.view">
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.view_purchase_order_filter"/>
        <field name="arch" type="xml">
            <field name="order_type" position="after">
                <field name="customer_purchase_order"/>
            </field>
            <filter name="activities_upcoming_all" position="after">
                <separator/>
                <filter name="incomplete_import_data" 
                    string="Incomplete Import Documentation" 
                        domain="['&amp;', '&amp;', ('order_type_foreign','=',True), 
                        ('state','in',['purchase', 'no_invoice']), '|', '|', 
                        ('import_license_number','=',False), 
                        ('import_license_issue_date','=',False), 
                        ('import_license_approval_date','=',False),
                        ('bill_landing_number','=',False),
                        ('bill_landing_issue_date','=',False),
                        ('bill_landing_reception_date','=',False),
                        ('bill_landing_description','=',False),
                        ('delivery_number','=',False),
                        ('delivery_date','=',False)]"/>
            </filter>
        </field>
    </record>

    <menuitem id="menu_payment_terms_in_purchase" name="Terms of Payments" parent="purchase_order_types.menu_purchase_order_in_config_purchase" sequence="30" action="account.action_payment_term_form"/>

    <menuitem id="menu_incoterms_in_purchase" parent="purchase.menu_purchase_config" sequence="48" action="stock.action_incoterms_tree"/>
</odoo>
