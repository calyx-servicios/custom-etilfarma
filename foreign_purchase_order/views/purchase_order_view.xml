<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="purchase_order_form_foreign_fields" model="ir.ui.view">
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <button name="action_view_invoice" position="attributes">
                <!-- Hide "Invoices" button if PO is sample -->
                <attribute name="attrs">{'invisible':['|', ('purchase_sample', "=", True), '&amp;', ('state', 'in', ('draft','sent','to approve')), ('invoice_ids','=',[])]}</attribute>
            </button>

            <field name="date_order" position="after">
                <field name="purchase_sample"/>
            </field>

            <field name="incoterm_id" position="replace">
                <!-- <field name="order_type_name" invisible="1"/> -->
                <field name="order_type_foreign" invisible="1"/>
            </field>

            <field name="order_type" position="attributes">
                <attribute name="attrs">{'readonly': [('purchase_sample' ,'=', True)]}</attribute>
            </field>

            <xpath expr="//div[2]" position="after">
                <div class="oe_title" attrs="{'invisible': [('order_type_foreign','=', False)]}">
                    <label string="Customer Purchase Order"/>
                    <h2>
                        <field name="customer_purchase_order"/>
                    </h2>
                </div>
            </xpath>

            <xpath expr="//notebook" position="inside">
                <page string='Foreign Purchase' attrs="{'invisible': [('order_type_foreign','=',False)]}">
                    <group>
                        <group>
                            <field name="incoterm_id" string="Incoterm" options="{'no_open':True,'no_create': True,'no_create_edit':1}"/>
                            <field name="packaging_id" string="Packaging" options="{'no_open':True,'no_create': True,'no_create_edit':1}"/>
                            <field name="special_indications" string="Special Indications" style=' min-height: 100px; word-break: break-word' />
                            <field name="extra_notes" style=' max-width: 285px;  width: 285px;word-break: break-word' string="Extra"/>
                            <field name="shipment_id" string="Shipment" options="{'no_open':True,'no_create': True,'no_create_edit':1}"/>
                            <field name="certificate_of_analysis_id" string="Certificate of Analysis" options="{'no_open':True,'no_create': True,'no_create_edit':1}"/>
                        </group>
                        <group>
                            <field name="place_of_delivery_id" string="Place of Delivery" options="{'no_open':True,'no_create': True,'no_create_edit':1}"/>
                            <field name="send_documents_to" string="Send documents to" style='min-height: 130px; word-break: break-word'/>
                            <field name="delivery_date_week" string="Delivery Date (Week)"/>
                            <field name="term_payments" string="Terms of Payment" options="{'no_open':True,'no_create':1,'no_create_edit':1}"/>
                            <field name="packing_list_id" string="Packing List" options="{'no_open':True,'no_create': True,'no_create_edit':1}"/>
                            <field name="import_license_id" string="Import License" options="{'no_open':True,'no_create': True,'no_create_edit':1}"/>
                        </group>
                    </group>
                </page>
                <page string='Tracking Order' attrs="{'invisible': [('order_type_foreign','=',False)]}">
                    <group>
                        <group name="confirmation" string="Confirmation">
                            <field name="confirmation_required" type="checkbox" string="Required"/>
                            <field name="confirmation_number" string="Number"/>
                            <field name="confirmation_date" string="Date"/>
                        </group>
                        <group name="proforma" string="Proforma">
                            <field name="proforma_required" type="checkbox" string="Required"/>
                            <field name="proforma_number" string="Number"/>
                            <field name="proforma_date" string="Date"/>
                        </group>
                        <group name="payment" string="Payment">
                            <field name="payment_required" type="checkbox" string="Required"/> 
                            <field name="payment_bank" string="Bank"/>
                            <field name="payment_account" string="Account"/>
                            <field name="payment_application_number" string="Application Number"/>
                            <field name="payment_date" string="Date"/>
                            <field name="payment_reference" string="Reference"/>
                            <field name="payment_concept" string="Concept"/>
                            <field name="payment_TTE_amount" string="Add Payment Value Of The TTE 'Amount'"/>
                            <field name="payment_TC" string="TC"/>
                        </group>
                        <group name="dispatcher" string="Dispatcher">
                            <field name="dispatcher_required" type="checkbox" string="Required"/>
                            <field name="dispatcher_reference" string="Reference"/>
                        </group>
                        <group name="interventions" string="Interventions">
                            <field name="intervention_required" type="checkbox" string="Required"/>
                            <field name="intervention_reference" string="Reference"/>
                            <field name="intervention_VPE_amount" string="VPE Amount"/>
                            <field name="intervention_application_date" string="Application Date"/>
                            <field name="intervention_approval_date" string="Approval Date"/>
                        </group>
                        <group name="import_license" string="Import License Id">
                            <field name="import_license_required" type="checkbox" string="Required"/>
                            <field name="import_license_reference" string="Reference"/>
                            <field name="import_license_approval_date" string="Official Date"/>
                            <field name="import_license_official_date" string="Approval Date"/>
                        </group>
                        <group name="booking" string="Booking(Ship Reserve)">
                            <field name="booking_required" type="checkbox" string="Required"/>
                            <field name="booking_conveyance" string="Conveyance"/>
                            <field name="booking_origin" string="Origin"/>
                            <field name="booking_ETD_date" string="ETD Date"/>
                            <field name="booking_ETA_date" string="ETA Date"/>
                            <field name="booking_transport_company" string="Transport Company"/>
                        </group>
                        <group name="documents" string="Documents">
                            <field name="documents_required" type="checkbox" string="Required"/>
                            <field name="documents_commercial_invoice_number" string="Commercial Invoice Number"/>
                            <field name="documents_FC_date" string="FC Date"/>
                            <field name="documents_quality_certificate_approval_date" string="Quality Certificate Approval Date"/>
                            <field name="documents_shipping_document" string="Shipping Document"/>
                            <field name="documents_shipping_date" string="Shipping Date"/>
                        </group>
                        <group name="import_delivery" string="Import Delivery">
                            <field name="delivery_required" type="checkbox" string="Required"/>
                            <field name="delivery_number" string="Delivery Number"/>
                            <field name="delivery_official_date" string="Official Date"/>
                            <field name="delivery_chanel" string="Chanel"/>
                        </group>
                        <group name="original_documentation" string="Original Documentation">
                            <field name="original_documentation_required" type="checkbox" string="Required"/>
                            <field name="original_documentation_original_receipt_date" string="Original Receipt Date"/>
                        </group>
                        <group name="expenses" string="Expenses">
                            <field name="expenses_required" type="checkbox" string="Required"/>
                            <field name="expenses_dispatcher_fees" string="Dispatcher Fees"/>
                            <field name="expenses_expenses" string="Expenses"/>
                        </group>                    
                    </group>
                </page>
            </xpath>

            <xpath expr="//sheet/div[@class='oe_title']" position="inside">
                <!-- <p class="text-warning" attrs="{'invisible': ['|','|',['order_type_foreign','=',False], ['state','not in',('purchase', 'no_invoice')],'&amp;','&amp;',['import_license_reference','!=',False],['import_license_approval_date','!=',False],['import_license_official_date','!=',False]]}">
                    <i class="fa fa-exclamation-triangle "></i> Action required: <strong>import license data not fully loaded.</strong>
                </p>
                <p class="text-warning" attrs="{'invisible': ['|','|',['order_type_foreign','=',False], ['state','not in',('purchase', 'no_invoice')],'&amp;','&amp;','&amp;',['bill_landing_number','!=',False],['bill_landing_issue_date','!=',False],['bill_landing_reception_date','!=',False],['bill_landing_description','!=',False]]}">
                    <i class="fa fa-exclamation-triangle "></i> Action required: <strong>bill landing data not fully loaded.</strong>
                </p>
                <p class="text-warning" attrs="{'invisible': ['|','|',['order_type_foreign','=',False], ['state','not in',('purchase', 'no_invoice')],'&amp;',['delivery_number','!=',False],['delivery_date','!=',False]]}">
                    <i class="fa fa-exclamation-triangle "></i> Action required: <strong>delivery data not fully loaded.</strong>
                </p> -->
            </xpath>
        </field>
    </record>

    <record id="purchase_order_foreign_fields_tree" model="ir.ui.view">
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_tree"/>
        <field name="arch" type="xml">
            <field name="order_type" position="after">
                <!-- <field name="customer_purchase_order"/>
                <field name="import_license_reference"/>
                <field name="bill_landing_number"/>
                <field name="delivery_number"/> -->
            </field>
        </field>
    </record>

    <record id="view_purchase_order_foreign_filter" model="ir.ui.view">
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.view_purchase_order_filter"/>
        <field name="arch" type="xml">
            <field name="order_type" position="after">
                <field name="customer_purchase_order"/>
            </field>
            <filter name="activities_upcoming_all" position="after">
                <separator/>
                <filter name="incomplete_import_data" string="Incomplete Import Documentation" domain="['&amp;', '&amp;', ('order_type_foreign','=',True), 
                        ('state','in',['purchase', 'no_invoice']), '|', '|', '|', '|', '|', '|', '|', '|', ('import_license_reference','=',False), ('import_license_issue_date','=',False), ('import_license_approval_date','=',False), ('bill_landing_number','=',False), ('bill_landing_issue_date','=',False), ('bill_landing_reception_date','=',False), ('bill_landing_description','=',False), ('delivery_number','=',False), ('delivery_date','=',False)]"/>        
                <filter name="incomplete_import_data" string="Incomplete Import License" domain="['&amp;', '&amp;', ('order_type_foreign','=',True), 
                        ('state','in',['purchase', 'no_invoice']), '|', '|', ('import_license_reference','=',False), ('import_license_issue_date','=',False), ('import_license_approval_date','=',False)]"/>        
                <filter name="incomplete_import_data" string="Incomplete Bill Landing " domain="['&amp;', '&amp;', ('order_type_foreign','=',True), 
                        ('state','in',['purchase', 'no_invoice']), '|', '|', '|', ('bill_landing_number','=',False), ('bill_landing_issue_date','=',False), ('bill_landing_reception_date','=',False), ('bill_landing_description','=',False)]"/>        
                <filter name="incomplete_import_data" string="Incomplete Import Delivery" domain="['&amp;', '&amp;', ('order_type_foreign','=',True), 
                        ('state','in',['purchase', 'no_invoice']), '|',('delivery_number','=',False), ('delivery_date','=',False)]"/>        
                
            </filter>
        </field>
    </record>

    <menuitem id="menu_payment_terms_in_purchase" name="Terms of Payments" parent="purchase_order_types.menu_purchase_order_in_config_purchase" sequence="30" action="account.action_payment_term_form"/>

    <menuitem id="menu_purchase_order_foreign_in_config_purchase" name="Foreign Fields Configuration" parent="purchase.menu_purchase_config" sequence="50" />

    <menuitem id="menu_incoterms_in_purchase" parent="foreign_purchase_order.menu_purchase_order_foreign_in_config_purchase" sequence="10" action="stock.action_incoterms_tree"/>


</odoo>
