<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="purchase_order_form_marks_field" model="ir.ui.view">
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <field name="internal_notes" position="after">
                <div class="oe_clear" position="before">
                    <div class="oe_clear">
                        <label for="marks"/>
                    </div>
                    <field name="marks" class="oe_inline" placeholder="Marks..."/>
                    <br/>
                </div>
            </field>
        </field>
    </record>
</odoo>
